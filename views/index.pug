extends layout

block content
  div.intro
    h1= title
    p Welcome to #{title} app a simple app that allows you to monitor your books.

  div.form 
    form#popup(action="/add" method="post" style="display:none")
      input.form-element(type="text" name= "title" required placeholder="Book Title")
      br
      input.form-element(type="text" name= "author" required placeholder="Book Author")
      br
      input.form-element(type="number" required name= "pages" min="1" default="10")
      label(for="pages") Pages
      br
      label(for="read") Read status:
      select.form-element( name= "read")
        option(value="read") Read
        option(value="unread" selected) Unread
      br
      input(type="submit" value="Add Book") 

  div.sidebar
    button#new-book NEW BOOK

  div.container
    -var n = 0;
    each book in myLibrary
      div.card(data-id= n++)
        h3= book.title
        //- p= book.author
        //- p= `${book.pages} pages`
        //- p= `This book ${book.readString()}`
        p= book.info()
        hr
        button.remove Remove Book
        if book.read
          button.change-read  Mark as unread
        else
          button.change-read  Mark as read


